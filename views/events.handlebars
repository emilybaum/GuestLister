    <div id="form_modal1" class="modal fade" role="dialog" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/events">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title" style="font-weight: bold;color: #3e3e3e;">Would you like to add new event?</h4>
                </div>
                <div class="modal-body" style="margin-left: 30px;margin-right: 30px;">
                    <div class="form-horizontal">
                        {{!-- Event Name Input--}}
                        <div class="form-group">
                        <label for="example-text">Event Name</label>
                        <input type="text" id="event-name" class="form-control" aria-describedby="example-text" placeholder="Enter Event name" required>
                        </div>
                        {{!-- Event Description Input --}}
                        <div class="form-group">
                        <label for="example-description">Event Description</label>
                        <textarea class="form-control" id="event-description" aria-describedby="example-description" placeholder="Enter Event Description"></textarea>
                        </div>
                        {{!-- Event Type Input--}}
                        <div class="form-group">
                        <label for="example-text">Event Type</label>
                        <input type="text" id="event-type" class="form-control" aria-describedby="example-text"
                            placeholder="Enter Event Type">
                        </div>
                        {{!-- Event time/date row --}}
                        <div class="form-group">
                        {{!-- Start Time--}}
                        <div class="col-md-3">
                            <label for="inputMDEx1">Start Time</label>
                            <input type="time" id="start-time" class="form-control">
                        </div>
                        {{!-- End Time--}}
                        <div class="col-md-3">
                            <label for="inputMDEx1">End Time</label>
                            <input type="time" id="end-time" class="form-control">
                        </div>
                        {{!-- Date --}}
                        <div class="col-md-6">
                            <label for="example-text">Date</label>
                            <input type="date" id="date" class="form-control" aria-describedby="example-text" placeholder="Enter Date">
                        </div>
                        </div>

                        {{!-- Event Address--}}
                        <div class="form-group">
                        <label for="inputAddress">Event Address</label>
                        <input type="text" class="form-control" id="event-address" placeholder="1234 Main St">
                        </div>
                        <div class="form-group">
                        <div class="col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" id="event-city">
                        </div>
                        <div class="col-md-3">
                            <label for="inputState">State</label>
                            <input type="text" class="form-control" id="event-state">
                        </div>
                        <div class="col-md-3">
                            <label for="inputZip">Zip Code</label>
                            <input type="text" class="form-control" id="event-zipcode">
                        </div>
                        </div>
                        {{!-- Questions you may want to ask your attendee Input --}}
                        <div class="form-group">
                        <label for="example-description">Question for Attendee</label>
                        <textarea class="form-control" id="question-one" aria-describedby="example-description"
                            placeholder="Enter Attendee question"></textarea>
                        </div>
                        <div class="form-group">
                        <label for="example-description">Question for Attendee</label>
                        <textarea class="form-control" id="question-two" aria-describedby="example-description"
                            placeholder="Enter Attendee question"></textarea>
                        </div>
                        <div class="form-group">
                        <label for="example-description">Question for Attendee</label>
                        <textarea class="form-control" id="question-three" aria-describedby="example-description"
                            placeholder="Enter Attendee question"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn grey-salsa btn-outline" data-dismiss="modal" aria-hidden="true">Close</button>
                    <button id="submitEvent" class="btn green btn-primary" type="submit">Add Event</button>
                </div>
                <form>
            </div>
